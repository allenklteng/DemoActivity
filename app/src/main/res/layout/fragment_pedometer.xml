<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.vitalsigns.demoactivity.fragment.PedometerFragment">

  <Button
    android:id="@+id/pedometer_reset"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_margin="16dp"
    android:textSize="40sp"
    android:textStyle="bold"
    android:textAlignment="center"
    android:text="RESET DATA ON WATCH"/>

  <TextView
    android:id="@+id/pedometer_current_step"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/pedometer_reset"
    android:layout_margin="16dp"
    android:textSize="40sp"
    android:textStyle="bold"
    android:textAlignment="center"
    android:text="CURRENT STEPS"/>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_alignParentBottom="true"
    android:layout_below="@id/pedometer_current_step">

    <HorizontalScrollView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <TableLayout
        android:id="@+id/pedometer_table_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      </TableLayout>
    </HorizontalScrollView>
  </ScrollView>
</RelativeLayout>
